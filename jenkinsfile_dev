pipeline {
    agent any

    stages {

        stage('Checkout') { 
            steps { checkout scm } 
        }

        stage('Build React') {
            steps {
                bat 'npm install'
                bat 'npm run build'   // creates dist/
                bat 'echo Build completed > artifacts\\build.log'
            }
        }

        stage('Docker Build :latest') {
            steps {
                bat 'docker build -t wael75613/react-app:latest . > artifacts\\docker-build.log 2>&1'
            }
        }

        stage('Run') {
            steps {
                bat 'docker rm -f react-latest || exit 0'
                bat 'docker run -d --name react-latest -p 80:80 wael75613/react-app:latest'
                bat 'docker logs react-latest > artifacts\\container.log'
                sleep time: 5, unit: 'SECONDS'
            }
        }

        stage('Smoke Test') {
            steps { 
                bat 'smoke_test.bat > artifacts\\smoke.log'
            }
        }

        stage('Archive') {
            steps { 
                archiveArtifacts artifacts: 'artifacts/**/*'
            }
        }

        stage('Push to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', 
                    usernameVariable: 'USER', passwordVariable: 'PASS')]) {

                    bat 'docker login -u %USER% -p %PASS%'
                    bat 'docker push wael75613/react-app:latest'
                }
            }
        }
    }

    post {
        always {
            bat 'docker rm -f react-latest || exit 0'
        }
    }
}
